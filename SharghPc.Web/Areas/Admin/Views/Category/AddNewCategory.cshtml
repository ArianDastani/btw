@{
    ViewData["Title"] = "دسته بندی";
}
@model SharghPc.DataLayer.DTOs.Category.AddNewCategoryDto

<div class="nk-content">
    <div class="container-fluid">
        <div class="nk-content-inner">
            <div class="nk-content-body">
                <div class="">
                    <div class="nk-block-head nk-block-head-lg wide-sm">
                        <div class="nk-block-head-content">
                            <div class="nk-block-head-sub">
                                <a class="back-to" href="http://../components.html"><em class="icon ni ni-arrow-left"></em><span>کامپوننت ها</span></a>
                            </div>
                            <h2 class="nk-block-title fw-normal">افزودن دسته جدید</h2>
                            <div class="nk-block-des">
                               
                            </div>
                        </div>
                    </div>
                    <!-- .nk-block-head -->
                    <div class="nk-block nk-block-lg">
                        <div class="nk-block-head">
                          
                        </div>
                        <div class="card">
                            <div class="card-inner">
                                <form asp-area="Admin" asp-controller="Category" asp-action="AddNewCategory" asp-route-parentId="0" class="form-validate">
                                    <div class="row g-gs">
                                        <input type="hidden" asp-for="ParentId" value="@ViewBag.ParentId" />
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label class="form-label" for="fv-full-name">نام دسته بندی</label>
                                                <div class="form-control-wrap">
                                                    <input type="text" class="form-control" asp-for="Title" required/>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label class="form-label" for="fv-full-name">نام url</label>
                                                <div class="form-control-wrap">
                                                    <input type="text" class="form-control" asp-for="UrlName" required/>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <button type="submit" class="btn btn-lg btn-primary">ذخیره اطلاعات</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
             
                    <!-- .nk-block -->
                </div>
                <!-- .components-preview -->
            </div>
        </div>
    </div>
</div>
