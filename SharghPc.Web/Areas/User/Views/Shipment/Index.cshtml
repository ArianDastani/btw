@model SharghPc.DataLayer.Entites.Finances.Shipment

<main class="main">

    <div class="site-breadcrumb">
        <div class="site-breadcrumb-bg" style="background: url(assets/img/breadcrumb/01.jpg)"></div>
        <div class="container">
            <div class="site-breadcrumb-wrap">
                <h4 class="breadcrumb-title">افزودن آدرس</h4>
                <ul class="breadcrumb-menu">
                    <li><a href="/"><i class="far fa-home"></i> صفحه اصلی</a></li>
                    <li class="active">افزودن آدرس</li>
                </ul>
            </div>
        </div>
    </div>


    <div class="user-area bg py-100">
        <div class="container">
            <div class="row">
                <partial name="_MenuDashboard" />

                <div class="col-lg-9">
                    <div class="user-wrapper">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="user-card">
                                    <div class="user-card-header">
                                        <h4 class="user-card-title">فهرست آدرس</h4>
                                        <div class="user-card-header-right">
                                            <a asp-area="User" asp-controller="Shipment" asp-action="AddShipment" class="theme-btn"><span class="far fa-plus-circle"></span>افزودن آدرس</a>
                                        </div>
                                    </div>
                                    @if (Model == null)
                                    {

                                    }
                                    else
                                    {
                                        
                                        <div class="table-responsive">
                                            <table class="table table-borderless text-nowrap">
                                                <thead>
                                                    <tr>
                                                        <th>نام</th>
                                                        <th>آدرس</th>
                                                        <th>تلفن</th>
                                                        <th>عمل</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td><span class="table-list-code">@(Model.User.FirstName+" "+Model.User.LastName)</span></td>
                                                        <td>@Model.FullAddress</td>
                                                        
                                                        <td>@Model.User.Mobile</td>
                                                        <td>
                                                            <a asp-area="User" asp-controller="Shipment" asp-action="EditShipment" asp-route-Id="@Model.Id" class="btn btn-outline-secondary btn-sm rounded-2" data-tooltip="tooltip" aria-label="ویرایش" data-bs-original-title="ویرایش"><i class="far fa-pen"></i></a>
                                                        </td>
                                                    </tr>
                                              
                                                </tbody>
                                            </table>
                                        </div>

                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</main>