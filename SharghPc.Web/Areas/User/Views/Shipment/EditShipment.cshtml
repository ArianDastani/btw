@model SharghPc.Application.Services.Shipment.GetShipmentForEditDto

<main class="main">

    <div class="site-breadcrumb">
        <div class="site-breadcrumb-bg" style="background: url(assets/img/breadcrumb/01.jpg)"></div>
        <div class="container">
            <div class="site-breadcrumb-wrap">
                <h4 class="breadcrumb-title">ویرایش آدرس</h4>
                <ul class="breadcrumb-menu">
                    <li><a href="/"><i class="far fa-home"></i> صفحه اصلی</a></li>
                    <li class="active">ویرایش آدرس</li>
                </ul>
            </div>
        </div>
    </div>


    <div class="user-area bg py-100">
        <div class="container">
            <div class="row">
                <partial name="_MenuDashboard" />
                <div class="col-lg-9">
                    <div class="user-wrapper">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="user-card">
                                    <div class="user-card-header">
                                        <h4 class="user-card-title">ویرایش آدرس </h4>

                                    </div>
                                    <div class="user-form">
                                        <form asp-area="User" asp-controller="Shipment" asp-action="EditShipment">
                                            <input asp-for="Id" type="hidden"/>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label>استان</label>
                                                        <input asp-for="State" type="text" class="form-control" placeholder="استان">
                                                        <span class="text-danger" asp-validation-for="State"></span>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label>شهر</label>
                                                        <input type="text" asp-for="City" class="form-control" placeholder="شهر ">
                                                        <span class="text-danger" asp-validation-for="City"></span>

                                                    </div>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label>کد پستی</label>
                                                        <input asp-for="ZipCode" type="number" class="form-control" placeholder=" کد پستی">
                                                        <span class="text-danger" asp-validation-for="ZipCode"></span>

                                                    </div>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label>آدرس</label>
                                                        <input asp-for="FullAddress" type="text" class="form-control" placeholder="آدرس کامل شما">
                                                        <span class="text-danger" asp-validation-for="FullAddress"></span>

                                                    </div>
                                                </div>

                                            </div>
                                            <button type="submit" class="theme-btn">
                                                <span class="far fa-save"></span>
                                                ویرایش آدرس
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</main>