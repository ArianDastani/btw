@{
    TempData["Title"] = "اطلاعات";
}

@model SharghPc.DataLayer.DTOs.Account.EditUserProfileDto
<main class="main">

    <div class="site-breadcrumb">
        <div class="site-breadcrumb-bg" style="background: url(assets/img/breadcrumb/01.jpg)"></div>
        <div class="container">
            <div class="site-breadcrumb-wrap">
                <h4 class="breadcrumb-title">نمایه من</h4>
                <ul class="breadcrumb-menu">
                    <li><a href="/"><i class="far fa-home"></i> صفحه اصلی</a></li>
                    <li class="active">نمایه من</li>
                </ul>
            </div>
        </div>
    </div>


    <div class="user-area bg py-70">
        <div class="container">
            <div class="row">
                <partial name="_MenuDashboard" />
                <div class="col-lg-9">
                    <div class="user-wrapper">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="user-card">
                                    <h4 class="user-card-title">اطلاعات نمایه</h4>
                                    <div class="user-form">
                                        <form asp-area="User" asp-controller="Acount" asp-action="Profile">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label asp-for="FirstName">نام</label>
                                                        <input asp-for="FirstName" type="text" class="form-control" placeholder="نام">
                                                        <span asp-validation-for="FirstName" class="text-danger"></span>

                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label asp-for="LastName">نام خانوادگی</label>
                                                        <input type="text" asp-for="LastName" class="form-control"
                                                               placeholder="نام خانوادگی">

                                                        <span asp-validation-for="LastName" class="text-danger"></span>

                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label asp-for="Email">ایمیل</label>
                                                        <input asp-for="Email" type="text" class="form-control" placeholder="ایمیل">
                                                        <span asp-validation-for="Email" class="text-danger"></span>

                                                    </div>
                                                </div>
                                            </div>
                                            <button type="submit" class="theme-btn">
                                                <span class="far fa-user"></span>
                                                ذخیره تغییرات
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</main>
