@{
    ViewData["Title"] = "تغییر رمز عبور";
}

@model SharghPc.DataLayer.DTOs.Account.ChangePasswordDto


<main class="main">

    <div class="site-breadcrumb">
        <div class="site-breadcrumb-bg" style="background: url(assets/img/breadcrumb/01.jpg)"></div>
        <div class="container">
            <div class="site-breadcrumb-wrap">
                <h4 class="breadcrumb-title">نمایه من</h4>
                <ul class="breadcrumb-menu">
                    <li><a href="/"><i class="far fa-home"></i> صفحه اصلی</a></li>
                    <li class="active">نمایه من</li>
                </ul>
            </div>
        </div>
    </div>


    <div class="user-area bg py-100">
        <div class="container">
            <div class="row">
                <partial name="_MenuDashboard" />

                <div class="col-lg-9">
                    <div class="user-wrapper">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="user-card">
                                    <h4 class="user-card-title">تغییر رمز عبور</h4>
                                    <div class="col-lg-12">
                                        <div class="user-form">
                                            <form asp-area="User" asp-controller="Acount" asp-action="ChangePassword">
                                                <div class="row">
                                                    <div class="col-md-12">
                                                        <div class="form-group">
                                                            <label asp-for="CurrentPassword"></label>
                                                            <input placeholder="گذرواژه قدیمی" type="password" class="form-control" asp-for="CurrentPassword" required="">
                                                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>

                                                        </div>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <div class="form-group">
                                                            <label asp-for="NewPassword" ></label>
                                                            <input placeholder="گذرواژه جدید" asp-for="NewPassword" type="password" class="form-control" required="">
                                                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                                                            </div>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <div class="form-group">
                                                            <label asp-for="ConfirmNewPassword"></label>
                                                            <input asp-for="ConfirmNewPassword" type="password" class="form-control"  required="">
                                                            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <button type="submit" class="theme-btn">
                                                    <span class="far fa-key"></span>
                                                    رمز عبور را تغییر دهید
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</main>
