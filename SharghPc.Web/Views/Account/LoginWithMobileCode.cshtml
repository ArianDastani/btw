@model SharghPc.Application.Services.user.ResultLoginAndRegisterWithMobileDto


<link href="~/notifications.css" rel="stylesheet" />
<script src="~/notifications.js"></script>
<script src="~/custom.js"></script>

<main class="main">

    <div class="site-breadcrumb">
        <div class="site-breadcrumb-bg" style="background: url(assets/img/breadcrumb/01.jpg)"></div>
        <div class="container">
            <div class="site-breadcrumb-wrap">
                <h4 class="breadcrumb-title">ثبت نام/ورود</h4>
                <ul class="breadcrumb-menu">
                    <li><a href="/"><i class="far fa-home"></i> صفحه اصلی</a></li>
	                <li class="active">ثبت نام/ورود</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="login-area py-100">
        <div class="container">
            <div class="col-md-7 col-lg-5 mx-auto">
                <div class="login-form">
	                <div class="login-header">
		                <img src="~/logo2.png" alt="logo2">

	                </div>
                    <link />
                    <form asp-controller="Account" asp-action="LoginToSite" method="post">
                        <div class="form-group">
	                        <label>کد ارسال شده</label>
	                        <input type="hidden" asp-for="Mobile" name="mobile" />
                            <input type="number" name="code" class="form-control" placeholder="کد ارسال شده به @Model.Mobile را وارد کنید" required="">
                        </div>

                        <div class="d-flex justify-content-between mb-4">
                           
                            <a href="/Account/Login" class="forgot-pass">ویرایش شماره </a>
                        </div>
                        <div class="d-flex align-items-center">
                            <button type="submit" class="theme-btn"><i class="far fa-sign-in"></i> ورود</button>
                        </div>
                    </form>
                    
                </div>
            </div>
        </div>
    </div>




</main>
