@model SharghPc.DataLayer.DTOs.Account.ActiveMobileDto
@{
    ViewData["Title"] = "فعال سازی حساب کاربری";
}
<main class="main">

    <div class="site-breadcrumb">
        <div class="site-breadcrumb-bg" style="background: url(assets/img/breadcrumb/01.jpg)"></div>
        <div class="container">
            <div class="site-breadcrumb-wrap">
                <h4 class="breadcrumb-title">فعال سازی حساب کاربری</h4>
                <ul class="breadcrumb-menu">
                    <li><a href="/"><i class="far fa-home"></i> صفحه اصلی</a></li>
                    <li class="active">فعال سازی حساب کاربری</li>
                </ul>
            </div>
        </div>
    </div>


    <div class="login-area py-100">
        <div class="container">
            <div class="col-md-5 mx-auto">
                <div class="login-form">
                    <div class="login-header">
                        <p>فعال سازی حساب کاربری</p>
                    </div>
                    <form asp-controller="Account" asp-action="ActiveMobile" method="post" class="theme-form">
                        <input type="hidden" class="form-control" asp-for="Mobile">
                        <input type="hidden" asp-for="Captcha" id="captchaInput" />

                        <div class="form-group">
                            <label>کد فعال سازی پیامک شده</label>
                            <input type="number" class="form-control" asp-for="MobileActiveCode" placeholder="کد ارسال شده" required="">
                            <span asp-validation-for="MobileActiveCode" class="text-danger"></span>
                        </div>
                        <div class="d-flex align-items-center">
                            <button type="submit" class="theme-btn">
                                <i class="far fa-key"></i>
                                تایید
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


</main>
@section Scripts
{
    <partial name="_CaptchaScripts" />
}